    <div class="registermain">
      <div class="register-1">
        <div class="register-2">
          <h2>Forgot Password</h2>
        </div>
        <form id="forgotPasswordForm" method="POST" action="/forgot-password">
          <div class="register-3">
            <div class="register-title">
              <h4>Email :</h4>
            </div>
            <input
              type="email"
              placeholder="abc@xyz.com"
              class="input"
              name="email"
              id="email"
              required
            />
          </div>
          <p id="message"></p>
          <div class="register-4">
            <button type="submit" id="sendResetLink">Send Reset Link</button>
          </div>
        </form>
      </div>
    </div>
